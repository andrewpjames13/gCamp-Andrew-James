<body>
  <div class="page-header"><h1>Frequently Asked Questions</h1></div>
  <ul>
    <% @common_questions.each do |q| %>
    <li><%= link_to q.question, "##{q.slug}" %></li>
    <% end %>
  </ul>
  <div class="row">
    <div class="col-md-6">
      <% @common_questions.each do |q| %>
      <p id="<%= q.slug %>"><h3><%= q.question %></h3></p>
      <p><%= q.answer %></p>
      <%= link_to "top", "#top" %>
      <% end %>
    </div>
  </div>

</body>
