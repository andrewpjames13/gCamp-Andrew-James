<!DOCTYPE html>
<html>
<head>
  <title>gCamp</title>
  <%= favicon_link_tag 'galvanize_icon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="top">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">gCamp</a>

        </div>
        <div id="navbar" class="navbar-nav navbar-right">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li><%= link_to current_user.first_name, user_path(current_user) %></li>
              <li><%= link_to "Sign Out", signout_path %></li>
            <% else %>
              <li><%= link_to "Sign Up", signup_path %></li>
              <li><%= link_to "Sign In", signin_path %></li>
            <% end %>
          </ul>
        </div>


        <div id="navbar" class="navbar-collapse collapse">

      </div>
    </nav>
    <div class="container">

      <% if flash[:notice] %>
      <div class="alert alert-success text-center"><%= flash[:notice] %></div>
      <% end %>

      <%= yield %>
    </body>
  </div>

    <div class="container">
        <footer>
        <div class="row">
          <div class= "col-xs-6">
            <%= link_to "About", about_path %>
            |
            <%= link_to "Terms", terms_path %>
            |
            <%= link_to "FAQ", faq_path %>
            |
            <%= link_to "Users", users_path %>
            |
            <% if current_user %>

            <%= link_to "Projects", projects_path %>
            <% end %>
          </div>

          <div class="col-xs-6 text-right">
            <%= link_to(image_tag("linkedin_icon.jpg", class:"img-footer", alt:"Linked in"), "https://www.linkedin.com/pub/andrew-james/3b/889/443") %>
            <%= link_to(image_tag("GitHub_icon.png", class:"img-footer", alt:"GitHub"), "https://github.com/andrewpjames13") %>
            <%= link_to(image_tag("Twitter_icon.png", class:"img-footer", alt:"Twitter"), "https://twitter.com/ajamesDesign13") %>
            <%= link_to(image_tag("galvanize_icon.png", class:"img-footer", alt:"galvanize"), "https://students.gschool.it/students/198") %>
          </div>
        </div>
      </footer>
    </div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>





</html>
