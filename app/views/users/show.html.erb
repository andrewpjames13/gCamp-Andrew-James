<div class="page-header">
  <div class="pull-right">
    <% if @user.id == current_user.id %>
    <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-info" %>
    <% end %>
  </div>
  <p>
    <h1><%= @user.full_name %></h1>
  </p>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Users", users_path %>
  </li>
  <li class="active"><%= @user.full_name %></li>
</ol>

<dl class="dl-horizontal">
  <dt><b>First name</b></dt>
  <p><dd><%= @user.first_name %></dd></p>

  <dt><b>Last name</b></dt>
  <p><dd><%= @user.last_name %></dd></p>

  <% if @user.id == current_user.id %>
  <dt><b>Email</b></dt>
  <p><dd><%= @user.email %></dd></p>
  <% end %>
</dl>
