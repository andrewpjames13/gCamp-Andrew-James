<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Project', new_project_path, class:"btn btn-info" %>
  </div>
  <h1>Projects</h1></div>

  <table class="table table-striped table-hover">
    <colgroup>
      <col class="col-xs-2">
      <col class="col-xs-7">
    </colgroup>
    <thead>
      <tr>
        <th>Name</th>
        <th>Tasks</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% Membership.all.each do |member| %>
        <% if member.user_id == current_user.id %>
        <tr>
          <td><%= link_to member.project.name, project_path(member.project) %></td>
          <td><%= link_to member.project.tasks.count, project_tasks_path(member.project) %></td>
          <td class="text-right">
            <%= link_to 'Edit', edit_project_path(member.project), class:"btn btn-info" %>
            <%= link_to 'Delete', project_path(member.project), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          </td>
        </tr>
        <% end %>
        <% end %>

    </tbody>
  </table>

  <br>
