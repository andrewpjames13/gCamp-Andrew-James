<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Project', new_project_path, class:"btn btn-info" %>
  </div>
  <h1>Projects</h1></div>

  <table class="table table-striped table-hover">
    <colgroup>
      <col class="col-xs-2">
      <col class="col-xs-7">
    </colgroup>
    <thead>
      <tr>
        <th>Name</th>
        <th>Tasks</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |p| %>
      <tr>
        <td><%= link_to p.name, project_path(p) %></td>
        <td><%= link_to p.tasks.count, project_tasks_path(p) %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_project_path(p), class:"btn btn-info" %>
          <%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
