<% @project.memberships.each do |member| %>
  <% if member.user_id == current_user.id %>
<div class="page-header">

  <div class="pull-right">
    <% if member.role == "owner" %>
          <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-info" %>
      <% end %>
  </div>

  <p>
    <h1><%= @project.name %></h1>
  </p>

</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li class="active"><%= @project.name %></li>
</ol>

<%= link_to "#{@project.tasks.count} Tasks", project_tasks_path(@project, @task) %>
<br>
<br>
<%= link_to "#{@project.memberships.count} Memberships", project_memberships_path(@project) %>
<br><br>
<% if member.role == "owner" %>
      <div class="well">
        <h4>Delete Project</h4>
        <p>
      <%= "Deleting this project will also delete #{@project.memberships.count} Memberships, #{@project.tasks.count} Tasks and associated comments"%>
        </p>
        <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
      </div>
      <% end %>
  <% end %>
<% end %>
