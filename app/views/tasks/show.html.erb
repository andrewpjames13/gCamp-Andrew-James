<% if flash[:notice] %>
<div class="alert alert-success text-center"><%= flash[:notice] %></div>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_task_path(@task), class:"btn btn-info" %>
  </div>
  <p>
  <h1><%= @task.description %></h1>
</p>
</div>
<ol class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path %>
  </li>
  <li class="active"><%= @task.description %></li>
</ol>

<p><strong>Due On: </strong><%= @task.due_date.to_s.gsub("-", "/") %></p>
